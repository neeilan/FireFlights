<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.b07.cscb07courseproject.BillingInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">



        <EditText
            android:inputType="none"
            android:hint="Email"
            android:layout_margin="15dp"
            android:id="@+id/editTextDisplayEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:hint="Address"
            android:layout_margin="15dp"
            android:maxLength="100"
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:inputType="text"
            android:hint="First name"
            android:maxLength="30"
            android:layout_margin="15dp"
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_margin="15dp"
            android:inputType="text"
            android:maxLength="30"
            android:hint="Last name"
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_margin="15dp"
            android:inputType="number"
            android:hint="Credit card number"
            android:maxLength="16"
            android:id="@+id/editTextCCNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_margin="15dp"
            android:inputType="date"
            android:hint="Credit card expiry (YYYY-MM-DD)"
            android:maxLength="30"
            android:id="@+id/editTextCCExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/buttonSaveBillingInfo"
            android:onClick="onSaveBillingInfoClicked"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View itineraries"
            android:id="@+id/buttonViewUserItineraries"
            android:onClick="onViewUserItinerariesClicked"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:id="@+id/buttonSignOut"
            android:onClick="onSignOutClicked"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
